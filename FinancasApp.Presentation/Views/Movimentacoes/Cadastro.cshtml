@model FinancasApp.Presentation.Models.Movimentacoes.MovimentacoesCadastroViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Cadastro de movimentações</h4>
<p>Cadastre suas contas a pagar ou a receber.</p>

@using (Html.BeginForm())
{
    <div class="row mt-2">
        <div class="col">
            <label>Nome da movimentação:</label>
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </span>
        </div>
        <div class="col">
            <label>Data:</label>
            @Html.TextBoxFor(model => model.Data, new { @class = "form-control", @type = "date" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Data)
            </span>
        </div>
        <div class="col">
            <label>Valor:</label>
            @Html.TextBoxFor(model => model.Valor, new { @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Valor)
            </span>
        </div>
        <div class="col">
            <label>Tipo:</label>
            <div>
                @Html.RadioButtonFor(model => model.Tipo, 1) <span>Conta a receber</span>
            </div>
            <div>
                @Html.RadioButtonFor(model => model.Tipo, 2) <span>Conta a pagar</span>
            </div>
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Tipo)
            </span>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col">
            <label>Descrição da movimentação:</label>
            @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Descricao)
            </span>
        </div>
        <div class="col">
            <label>Selecione a categoria:</label>
            @Html.DropDownListFor(model => model.CategoriaId, Model.ListagemCategorias,
        "Escolha uma opção", new { @class = "form-select" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.CategoriaId)
            </span>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col">
            <input type="submit" value="Realizar Cadastro" class="btn btn-success" />
        </div>
    </div>
}

